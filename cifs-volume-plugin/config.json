{
    "description": "CIFS plugin for Docker",
    "documentation": "https://github.com/trajano/docker-volume-plugins/",
    "entrypoint": [
        "/cifs-volume-plugin"
    ],
    "env": [
        {
            "name": "CREDENTIAL_PATH",
            "settable": [
                "value"
            ],
            "value": "/root/credentials"
        },
        {
            "name": "DEFAULT_CIFSOPTS",
            "settable": [
                "value"
            ],
            "value": ""
        }
    ],
    "network": {
        "type": "host"
    },
    "mounts": [
        {
            "description": "Host /root folder which is expected to contain credential files",
            "destination": "/root",
            "source": "/root",
            "type": "bind",
            "options": [
                "rbind",
                "ro"
            ]
        }
    ],
    "propagatedMount": "/var/lib/docker-volumes",
    "interface": {
        "types": [
            "docker.volumedriver/1.0"
        ],
        "socket": "cifs.sock"
    },
    "linux": {
        "capabilities": [
            "CAP_SYS_ADMIN",
            "CAP_DAC_READ_SEARCH"
        ]
    }
}