{
    "description": "GlusterFS plugin for Docker",
    "documentation": "https://github.com/trajano/docker-volume-plugins/",
    "entrypoint": [
        "/tini",
        "--",
        "/glusterfs-volume-plugin"
    ],
    "env": [
        {
            "name": "SERVERS",
            "settable": [
                "value"
            ],
            "value": ""
        },
        {
            "name": "SECURE_MANAGEMENT",
            "settable": [
                "value"
            ],
            "value": ""
        }
    ],
    "network": {
        "type": "host"
    },
    "propagatedMount": "/var/lib/docker-volumes",
    "interface": {
        "types": [
            "docker.volumedriver/1.0"
        ],
        "socket": "gfs.sock"
    },
    "linux": {
        "capabilities": [
            "CAP_SYS_ADMIN"
        ],
        "devices": [
            {
                "path": "/dev/fuse"
            }
        ]
    },
    "mounts": [
        {
            "name": "ssl",
            "source": "/etc/ssl",
            "description": "",
            "destination": "/etc/ssl",
            "type": "bind",
            "options": ["readonly", "shared", "rbind"]
        }
    ]
}
